<div class="show-user-profile">
  <div class="page-header">
    <h1>User Profile</h1>
  </div>

  <%= render 'user_profile', user_profile: @user_profile %>

  <div class="profile-navigation">
    <%= link_to 'Edit Profile', edit_user_profile_path(@user_profile), class: "btn btn-primary" %>
    <%= link_to 'All Profiles', user_profiles_path, class: "btn btn-secondary" %>
  </div>
</div>

<style>
.show-user-profile {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.page-header {
  text-align: center;
  margin-bottom: 30px;
}

.page-header h1 {
  color: #333;
  margin-bottom: 10px;
}

.profile-navigation {
  margin-top: 30px;
  text-align: center;
  display: flex;
  gap: 10px;
  justify-content: center;
}
</style>