\fancyhead{}
\fancyfoot{}
\fancyhead[L]{
<%
  logo = false
  interview ||= nil
  project ||= (interview && interview.project)
  logo_record = project.logos.where(locale: header_locale).first

  if logo_record.present?
    logo_tmp_path = File.join(Rails.root, 'tmp', 'files', "#{logo_record.file.blob.filename}")
    logo_blob_path = ActiveStorage::Blob.service.send(:path_for, logo_record.file.key)
    logo = File.file?(logo_blob_path) && File.file?(logo_tmp_path)
  end
%>
  <% if logo %>
    \includegraphics[height=12mm]{<%= "#{logo_tmp_path}" %>}
    \vspace*{0.2cm}
    \newline
  <% end %>
  \fontsize{9}{11}
  \selectfont{\textcolor{primaryColor} {<%= header_text %> }}
  \vspace*{0.1cm}
}

<%
  interviewee_name = interview && interview.anonymous_title(header_locale.to_sym)
  footer_text = ""
  footer_text += "#{I18n.t("#{doc_type}_footer", locale: header_locale)} #{interviewee_name}" if interview
  footer_text += ", #{I18n.t('interview', locale: header_locale)} #{interview.archive_id}, #{interview.interview_date && Date.parse(interview.interview_date).strftime("%d.%m.%Y") rescue interview.interview_date}" if interview && interview.interview_date
  footer_text += ", #{project.name(header_locale)}"
  footer_text += ", Teilsammlung \"Deutsche Seelen\"" if interview && interview.collection && interview.collection.name =~ /Deutsche Seelen/
  footer_text += ", #{project.domain_with_optional_identifier}/#{header_locale}/interviews/#{interview.archive_id}" if interview
%>

<% if interview && interview.doi_status == 'created'
     footer_text += ", DOI: https://doi.org/#{Rails.configuration.datacite['client_id']}/#{project.shortname}.#{interview.archive_id}, (#{I18n.t('called', locale: header_locale)}: #{Date.today.strftime("%d.%m.%Y")})."
   else
     footer_text += "."
   end
%>

\fancyfoot[L]{
  \fontsize{9}{11}
  \selectfont{
    \textcolor{primaryColor} {
      \begin{minipage}[t]{0.9\textwidth}
        \raggedright
        <%= latex_escape(footer_text) %>\\
        \vspace*{0.5cm}
        \copyright <%= Date.today.strftime("%Y") %> <%= (interview.project.institutions.where(parent_id: nil).first ||
          interview.project.institions.first).name(header_locale) %>
      \end{minipage}
    }
  }
}

\fancyfoot[R]{
  \thepage
}
