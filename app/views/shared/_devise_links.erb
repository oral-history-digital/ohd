<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.link'), new_user_session_path, :class => 'new_session link' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.registrations.link'), new_user_registration_path, :class => 'new_registration link' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t('devise.passwords.forgot'), edit_user_password_path, :class => 'new_password link' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%#= link_to t('devise.confirmations.link'), new_confirmation_path(resource_name), :class => 'new_confirmation link' %><br />
<% end -%>

<%- if devise_mapping.lockable? && controller_name != 'unlocks' %>
  <%= link_to t('devise.unlocks.link'), new_unlock_path(resource_name), :class => 'unlock link' %><br />
<% end %>
