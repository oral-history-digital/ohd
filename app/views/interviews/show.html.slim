noscript
  = t('noscript')
= react_component('MediaComponent', prerender: false)

.Tabs
  .Layout-contentTabs
    .Tabs-tabList {
      role="tablist"
      aria-orientation="horizontal"
      data-reach-tab-list=""
    }

      .Tabs-tab {
        aria-controls="tabs--panel--0"
        aria-selected="true"
        role="tab"i
        tabindex="0"
        class="Tabs-tab"
        data-reach-tab=""
        data-orientation="horizontal"
        id="tabs--tab--0"
        type="button"
      }

        = fa_icon 'file-alt', class: 'Tabs-tabIcon'
        span.Tabs-tabText
          = "#{tv('transcript')} (#{@interview.alpha3})"

  
  .wrapper-content
    .Transcript
      = render partial: 'transcript', locals: {\
        interview: @interview,\
        alpha3: @interview.alpha3\
      }
