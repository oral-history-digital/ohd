<%
  title = I18n.t('registry', locale: @locale)
  last_entry = nil
%>

\title{<%= title %>}

\begin{document}

<%= render partial: "./latex/header_footer",
           locals: {
               header_text: title
           } %>

<%= render partial: "./latex/title",
           locals: {
               title: title,
               space_above: 3,
               space_below: 3,
               font_size: 18
           } %>

<%= render partial: "./latex/authors",
           locals: {
               space_above: 3,
               space_below: 3,
               font_size: 18
           } %>

   \vspace{2cm}

<%= render partial: "./latex/explanation",
           locals: {
               space_above: 20,
               space_below: 3,
               font_size: 18
           } %>

\newpage

<%# set title of  tableofcontents: %>
\renewcommand{\contentsname}{<%= I18n.t('table_of_contents', locale: @locale) %>}
\tableofcontents

\newpage

<%= render partial: "./latex/title",
           locals: {
               title: title,
               space_above: 0,
               space_below: 0.01,
               font_size: 13
           } %>

<% @registry_entries.each do |registry_entry| %>
  <% unless registry_entry.descriptor(@locale).blank? %>
    <%# get first char for table of contents %>
    <% if !last_entry || last_entry.descriptor(@locale)[0] != registry_entry.descriptor(@locale)[0] %>
      \section*{<%= registry_entry.descriptor(@locale)[0].upcase %>}
      \addcontentsline{toc}{section}{<%= registry_entry.descriptor(@locale)[0].upcase %>}
    <% end %>

    <%= @locale.to_s == 'el' ? 'ΠΟ' : 'BB' %> \textbf{<%= latex_escape(registry_entry.descriptor(@locale)) %>}\\
    <% unless registry_entry.registry_names.first.notes(@locale).blank? %>
      <%= @locale.to_s == 'el' ? 'Σε' : 'SH' %> <%= latex_escape(registry_entry.registry_names.first.notes(@locale)) %>\\
    <% end %>

    <% last_entry = registry_entry %>
  <% end %>
<% end %>
