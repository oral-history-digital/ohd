<div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
  <h3 class="text-lg font-semibold text-gray-900 mb-2">
    <%= word.term || 'Word' %>
  </h3>
  
  <% if word.definition&.present? %>
    <p class="text-gray-600 leading-relaxed mb-4"><%= word.definition %></p>
  <% end %>
  
  <div class="flex justify-between items-center text-sm text-gray-500">
    <span class="font-medium"><%= word.language || 'Unknown' %></span>
    <span class="bg-gray-100 px-2 py-1 rounded-md">
      <%= t('words.usage_count', count: word.usage_count || 0, default: "Used #{word.usage_count || 0} times") %>
    </span>
  </div>
</div>