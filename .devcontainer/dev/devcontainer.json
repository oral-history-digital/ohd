{
    "name": "Oral History Digital Dev Container",

    // Point at your Compose file(s)
    "dockerComposeFile": ["./docker-compose.yml"],
    "service": "app",
    "workspaceFolder": "/workspace",

    // User inside the container
    "remoteUser": "root",

    // Environment variables
    "containerEnv": {
        "DISPLAY": ":99"
    },

    // Lifecycle hooks
    "postCreateCommand": "bash .devcontainer/scripts/setup-dev.sh",
    "postStartCommand": "bash .devcontainer/scripts/start-app.sh",

    // Ports to forward
    "forwardPorts": [3000, 8983, 3035, 6080], // 6080 for noVNC

    // Port attributes for better HMR WebSocket support
    "portsAttributes": {
        "3000": {
            "label": "Rails App",
            "onAutoForward": "notify"
        },
        "3035": {
            "label": "Webpack Dev Server",
            "onAutoForward": "silent",
            "protocol": "http"
        },
        "8983": {
            "label": "Solr",
            "onAutoForward": "ignore"
        }
    },

    // VS Code client customizations
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.formatOnSave": true,
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[json]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[ruby]": {
                    "editor.formatOnSave": true
                }
            },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "dbaeumer.vscode-eslint",
                "github.copilot",
                "eamodio.gitlens",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "shutdownAction": "stopCompose"
}
